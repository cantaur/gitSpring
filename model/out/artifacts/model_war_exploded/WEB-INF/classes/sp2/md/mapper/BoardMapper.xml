<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sp2.md.mapper.BoardMapper">
    <select id="list" resultType="Board">
        select * from BOARD order by SEQ desc
    </select>
    <insert id="insert" parameterType="Board">
        insert into BOARD values(BOARD_SEQ.nextval, #{writer}, #{email}, #{subject}, #{content}, SYSDATE)
    </insert>
    <delete id="delete" parameterType="int">
        delete from BOARD where SEQ=#{seq}
    </delete>

    <select id="select" parameterType="int" resultType="Board">
        select * from BOARD where SEQ=#{seq}
    </select>

    <update id="update" parameterType="Board">
        update BOARD set EMAIL=#{email}, SUBJECT=#{subject}, CONTENT=#{content}, RDATE=SYSDATE where SEQ=#{seq}
    </update>


</mapper>